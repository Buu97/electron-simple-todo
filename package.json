{
  "name": "simple-todo",
  "version": "0.1.0",
  "author": "Buu97 <tokyratefinanahary97@gmail.com>",
  "description": "A simple To do app",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "electron-is-dev": "^1.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.1",
    "typeorm": "^0.2.30",
    "typescript": "^4.1.3"
  },
  "main": "app/main.js",
  "scripts": {
    "start": "concurrently \"yarn run react-start\" \"wait-on http://localhost:5000 && yarn run start-electron\"",
    "build": "rescripts build",
    "package": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "react-start": "BROWSER=none rescripts start",
    "start-electron": "electron ./app/main.js"
  },
  "build": {
    "files": [
      "app/**",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": "x64"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ]
    }
  },
  "homepage": "./",
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.15",
    "@rescripts/rescript-env": "^0.0.12",
    "concurrently": "^5.3.0",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "wait-on": "^5.2.1"
  }
}